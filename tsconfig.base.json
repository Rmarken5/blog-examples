{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blog-examples/home": ["libs/home/src/index.ts"],
      "@blog-examples/state-management/data-access": [
        "libs/state-management/data-access/src/index.ts"
      ],
      "@blog-examples/state-management/feature": [
        "libs/state-management/feature/src/index.ts"
      ],
      "@blog-examples/state-management/ui": [
        "libs/state-management/ui/src/index.ts"
      ],
      "@blog-examples/testing": ["libs/testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
